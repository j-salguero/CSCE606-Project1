<%= turbo_frame_tag "modal" do %>
	<div class="modal">
		<h1>Editing activity</h1>

		<%= render "form", activity: @activity %>

		<br>

		<table class="table_i">
			<tr class="tr_i">
				<td class="td_i">
		  	<%= link_to "View", @activity, class: "cancel-button" %>
				</td>
			</tr>
			<tr class="tr_i">
				<td class="td_i">
		  <%= link_to "Activities", activities_path, class: "cancel-button", data: { turbo_frame: "_top" }  %>
		  <%= link_to "Events", activity_events_path, class: "cancel-button", data: { turbo_frame: "_top" }  %>
				</td>
			</tr>
		</table>
	</div>
<% end %>

